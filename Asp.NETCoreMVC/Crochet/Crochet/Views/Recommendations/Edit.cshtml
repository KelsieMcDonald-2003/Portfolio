@model RecommendationModel
@{
    string title = ViewBag.Action + " Recommendation";
    ViewData["Title"] = title;
}

<h2>@title</h2>

<form asp-action ="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title:</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Author" class="form-label">Pattern's Publisher:</label>
        <input asp-for="Author" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="PubDate" class="form-label">Pattern's Published/Found Date:</label>
        <input asp-for="PubDate" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description:</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating:</label>
        <input asp-for="Rating" min="1" max="5" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="RecommendId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Recommendations" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>